@{
    ViewBag.Title = "アルバイト情報詳細";
}

<div class="contents">
    <table class="table_User">
        <tr>
            <th>ユーザID</th>
            <td>@Model.user_id</td>
        </tr>
        <tr>
            <th>姓</th>
            <td>@Model.familyname</td>
        </tr>
        <tr>
            <th>名</th>
            <td>@Model.firstname</td>
        </tr>
        <tr>
            <th>セイ</th>
            <td>@Model.familyname_kana</td>
        </tr>
        <tr>
            <th>メイ</th>
            <td>@Model.firstname_kana</td>
        </tr>
        <tr>
            <th>性別</th>
            <td>@Model.sex_type</td>
        </tr>
        <tr>
            <th>生年月日</th>
            <td>@Model.birthday</td>
        </tr>
        <tr>
            <th>入社日</th>
            <td>@Model.joined_date</td>
        </tr>
        <tr>
            <th>退社日</th>
            <td>@Model.leaved_date</td>
        </tr>
        <tr>
            <th>パスワード</th>
            <td>@Model.password</td>
        </tr>
    </table>

    <div>
        <p>店舗</p>
        <table class="table_User">
            <tr>
                <th>店舗</th>
                <th>期間From</th>
                <th>期間To</th>
            </tr>
            <tr>
                <td></td>
                <td></td>
                <td></td>
                @*
                <td>@Model.store</td>
                <td>@Model.store_from</td>
                <td>@Model.store_to</td>
                *@
            </tr>
        </table>
    </div>

    <button type="button" class="btn btn-default" onclick="indexView()">戻る</button>
    <button type="button" class="btn btn-primary" onclick="link('@Url.Action("Edit", Model)');">編集する</button>

</div>

<script>
@* 一覧画面に遷移 *@
    function indexView() {
        link('@Url.Action("Index", "Worker")');
    }
</script>
