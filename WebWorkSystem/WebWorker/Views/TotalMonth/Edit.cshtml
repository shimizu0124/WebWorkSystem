@using WebWorker.ViewModels.TotalMonth;
@model TotalMonthListViewModel

@{
    ViewBag.Title = "勤怠編集(全体-月次)";
}

<div class="contents">
    <table>
        <tr>
            <td>
                <label>日付</label>
            </td>
            <td>
                <select name="yyyy">
                    <option value="2015">2015</option>
                    <option value="2016">2016</option>
                    <option value="2017" selected>2017</option>
                </select>
            </td>
            <td>年</td>
            <td>
                <select name="MM">
                    <option value="01">01</option>
                    <option value="02">02</option>
                    <option value="03" selected>03</option>
                </select>
            </td>
            <td>月</td>
        </tr>
    </table>

    <button class="btn btn-info" type="button" onclick="indexView()">検索する</button>


    <table class="table_TotalMonth">
        <tr>
            <th></th>
            @{
                for (var i = 0; i < 15; i++)
                {
                    <th>@Model.Name</th>
                }
            }
        </tr>
        @{
            for (var i = 0; i < 31; i++)
            {
                <tr>
                    <td>@Model.WorkDay</td>

                    @{
                        for (var j = 0; j < 15; j++)
                        {
                            <td><input type="text" class="item" value="@Model.StartTime"></td>
                        }
                    }
                </tr>
            }
        }
    </table>

    <button class="btn btn-default" type="button" onclick="indexView()">戻る</button>
    <button class="btn btn-default" type="button" onclick="indexView()">変更する</button>

</div>

<script>
	@* 一覧画面に遷移 *@
    function indexView()
	{
		link('@Url.Action("Index", "TotalMonth")');
	}
</script>