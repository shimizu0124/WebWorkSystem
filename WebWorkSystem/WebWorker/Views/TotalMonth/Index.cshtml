@using WebWorker.ViewModels.TotalMonth;
@model TotalMonthListViewModel

@{
    ViewBag.Title = "勤怠一覧(全体-月次)";
}

<div class="contents">
    <table>
        <tr>
            <td>
                <label>日付</label>
            </td>
            <td>
                <select name="yyyy">
                    <option value="2015">2015</option>
                    <option value="2016">2016</option>
                    <option value="2017" selected>2017</option>
                </select>
            </td>
            <td>年</td>
            <td>
                <select name="MM">
                    <option value="01">01</option>
                    <option value="02">02</option>
                    <option value="03" selected>03</option>
                </select>
            </td>
            <td>月</td>
        </tr>
    </table>

    <button class="btn btn-info" type="button" onclick="indexView()">検索する</button>


    <table class="table_TotalMonth">
        <tr>
            <th></th>
            @{
                for (var i = 0; i < 15; i++)
                {
                    <th>@Model.Name</th>
                }
            }
        </tr>
        @{
            for (var i = 0; i < 31; i++)
            {
                <tr>
                    <td><a href="@Url.Action("Index", "TotalDay")">@Model.WorkDay</td>

                    @{
                        for (var j = 0; j < 15; j++)
                        {
                            <td>@Model.StartTime<br>-@Model.EndTime</td>
                        }
                    }
                </tr>
            }
        }
    </table>

    <table class="table_TotalWorkTime">
        <tr>
            <th>総実勤務時間</th>
            <td>@Model.WorkTime</td>
        </tr>
    </table>

    @*<button class="btn btn-primary" type="button" onclick="editView()">編集する</button>*@
</div>

<script>
    @* 一覧画面に遷移 *@
    function indexView()
    {
        link('@Url.Action("Index", "TotalMonth")');
    }
	@* 編集画面に遷移 *@
    function editView()
	{
		link('@Url.Action("Edit", "TotalMonth")');
    }
</script>
