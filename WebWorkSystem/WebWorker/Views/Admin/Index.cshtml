@using WebWorker.ViewModels.Admin;
@model AdminListViewModel

@{
    ViewBag.Title = "管理者情報一覧";
}

<div class="contents">
    <button class="btn btn-info" type="button" onclick="registerView()">新規登録</button>


    <table class="table01">
        <tr>
            <th>Id</th>
            <th>名前</th>
            <th>性別</th>
            <th>生年月日</th>
            <th>年齢</th>
            <th>入社日</th>
            <th>退社日</th>
            <th></th>
        </tr>
        @{
            for (var i = 0; i < 5; i++)
            {
                <tr>
                    <td>@Model.Id</td>
                    <td>@Model.Name</td>
                    <td>@Model.Sex</td>
                    <td>@Model.BirthDay</td>
                    <td>@Model.Age</td>
                    <td>@Model.StartTime</td>
                    <td>@Model.EndTime</td>
                    <td><button class="btn btn-primary" type="button" onclick="detailView()">詳細</button></td>
                </tr>
            }
        }   
    </table>

</div>

<script>
@* 一覧画面に遷移 *@
    function registerView() {
        link('@Url.Action("Register", "Admin")');
    }
@* 詳細画面に遷移 *@
    function detailView() {
        link('@Url.Action("Detail", "Admin")');
    }
</script>
