<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - 勤怠管理システムFSP</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="header">
        勤怠管理システムFSP
        <br>
        <script>
            t = setInterval("DspClk()", 500);
        </script>
        <form name="ClkForm">
            <INPUT type="text" name="Input">
        </form>
    </div>

    <div class="sidemenu">
        <div class="view-name">MENU</div>       
        
        <div class="MenuCell" onclick="link('@Url.Action("Index", "Day")');">
            <p>勤怠一覧(個人-日次)</p>
        </div>
        <div class="MenuCell" onclick="link('@Url.Action("Index", "Month")');">
            <p>勤怠一覧(個人-月次)</p>
        </div>
        <div class="MenuCell" onclick="link('@Url.Action("Index", "TotalDay")');">
            <p>勤怠一覧(全体-日次)</p>
        </div>
        <div class="MenuCell" onclick="link('@Url.Action("Index", "TotalMonth")');">
            <p>勤怠一覧(全体-月次)</p>
        </div>
        <div class="MenuCell" onclick="link('@Url.Action("Index", "Help")');">
            <p>ヘルプ集計</p>
        </div>
        <div class="MenuCell" onclick="link('@Url.Action("Index", "Worker")');">
            <p>アルバイト情報一覧</p>
        </div>
        <div class="MenuCell" onclick="link('@Url.Action("Index", "Admin")');">
            <p>管理者情報一覧</p>
        </div>
        <div class="MenuCell" onclick="link('@Url.Action("Login", "Account")');">
            <p>ログイン</p>
        </div>
        
    </div>

    <div class="contents">
        <div class="view-name">@ViewBag.Title</div>
    </div>

    <div>
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

<script>
    t = 0;
    function DspClk() {
      DD = new Date();
      Hours = DD.getHours();
      Minutes = DD.getMinutes();
      Seconds = DD.getSeconds();
      status = Hours + "時" + Minutes + "分" + Seconds +"秒";
      document.ClkForm.Input.value = Hours + "時" + Minutes + "分" + Seconds +"秒";
    }
</script>

<script>
    function link(url) {
        location.href = url;
    }
</script>
